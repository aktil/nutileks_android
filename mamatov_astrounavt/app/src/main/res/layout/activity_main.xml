<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/cosmos"
    >

    <ImageView
        android:layout_width="356dp"
        android:layout_height="207dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/astronaut">

    </ImageView>

    <TextView
        android:id="@+id/astorName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Салижан Шарипов"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="8dp"
        android:background="#80CDDC39"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:gravity="center">
    </TextView>


    <EditText
        android:id="@+id/textField"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Твои пожелания"
        android:text=""
        android:padding="6dp"
        android:visibility="gone"
        android:textColor="@color/black"
    />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_send"
        android:layout_width="174dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Отправить сообщение"
        android:textSize="15sp"
        app:cornerRadius="25dp">
    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_send2"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:text="отправить"
        android:textSize="18sp"
        app:cornerRadius="25dp"
        android:visibility="gone">
    </com.google.android.material.button.MaterialButton>

</LinearLayout>

